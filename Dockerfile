# Используйте Node.js в качестве базового образа
FROM node:14

# Установите директорию приложения
WORKDIR /app

# Скопируйте файлы package.json и package-lock.json
COPY package*.json ./

# Установите зависимости приложения
RUN npm install

# Скопируйте остальные файлы проекта
COPY . .

# Установите порт, на котором будет работать ваше приложение
ENV PORT 3000

# Укажите команду для запуска вашего приложения
CMD [ "node", "app.js" ]
